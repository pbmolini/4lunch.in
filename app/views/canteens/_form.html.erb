<%= simple_nested_form_for(@canteen, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @canteen.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@canteen.errors.count, "error") %> prohibited this canteen from being saved:</h4>

      <ul>
      <% @canteen.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.input :name, :class => "form-control", label: false %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :webcam_url, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.input :webcam_url, :class => "form-control", label: false %>
    </div>
  </div>

  <h3><%= _('Dishes') %></h3>
  <%= f.fields_for :dishes, wrapper: false do |dishes_form| %>
    <%= render 'dishes/create', dishes_form: dishes_form %>
  <% end %>
  <%= f.link_to_add fa_icon('plus',text:_('Add dish')), :dishes %>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
