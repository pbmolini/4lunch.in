<%= simple_form_for([@canteen,@menu], :html => { :class => "form-horizontal" }) do |f| %>
  <% if @menu.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@menu.errors.count, "error") %> prohibited this menu from being saved:</h4>

      <ul>
      <% @menu.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.association :canteen, as: :hidden %>

  <div class="form-group">
    <%= f.label :date, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.input :date, :class => "form-control", label: false %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
