  <dt>Vegan:</dt>
  <dd><%= @ingredient.vegan %></dd>

  <dt>Halal:</dt>
  <dd><%= @ingredient.halal %></dd>

  <dt>Burzum:</dt>
  <dd><%= @ingredient.burzum %></dd>

  <dt>Frozen:</dt>
  <dd><%= @ingredient.frozen %></dd>

  <dt>Lactose:</dt>
  <dd><%= @ingredient.lactose %></dd>

  <dt>Kosher:</dt>
  <dd><%= @ingredient.kosher %></dd>

