<div class="page-header">
  <%= link_to ingredients_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_ingredient_path(@ingredient), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1><%= @ingredient.name %></h1>
</div>

<p>
  <% Ingredient.columns.collect {|c| c.name if c.type == :boolean}.compact.each do |att| %>
    <%= content_tag(:span, att, class: 'label label-info') if @ingredient.send("#{att}?") %>
  <% end %>
</p>
